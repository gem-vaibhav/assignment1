@model assaignment.Models.FindUser
@{
    ViewBag.Title = "Reset Password";
}
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <h1 style="margin:5% 25% 5% 45%">Reset Password</h1>
    @using (Html.BeginForm(FormMethod.Post, null))
    {
        <div class="row mb-3">
            @Html.LabelFor(model => model.Email, new { @class = "col-sm-2 col-form-label" } )
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Email, new {@type="email", @class = "form-control", @data_val = "true", @required = "required"})
            </div>
        </div>   
        @Html.ValidationMessageFor(model => model.Email,"",new {@class="alert-danger"})
        
        <div class="row mb-3">
            @Html.LabelFor(model => model.New_Password,new { @class = "col-sm-2 col-form-label"})
            <div class="col-sm-10">
                @Html.PasswordFor(model => model.New_Password,new { @class = "form-control",@data_val="true" ,@required = "required"})
            </div>
        </div>
        @Html.ValidationMessageFor(model => model.New_Password,"",new {@class="alert-danger"})  
        <div class="row mb-3">
            @Html.LabelFor(model => model.Confirm_New_Password,new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.PasswordFor(model => model.Confirm_New_Password,new { @class = "form-control",@data_val="true" ,@required="required"})
            </div>
        </div>
        @Html.ValidationMessageFor(model=>model.Confirm_New_Password,"",new{@class="alert-danger"})
        
        <input type="submit" value="Reset password" class="btn btn-primary">
    }
    @if (ViewBag.Message!=null)
    {   <script type="text/javascript">
        window.onload=function()
        {
            alert("@ViewBag.Message");
        }
        </script>
    }
</body>
</html>